<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="90dp"
            android:id="@+id/curTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
             />

        <TextView
            android:id="@+id/tempDecription"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/curTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="35sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/minLayout"
        android:layout_below="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">







                <TextView
                    android:id="@+id/minTemp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:textColor="@android:color/white"
                    android:text="25"/>

                <TextView
                    android:id="@+id/min"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/minTemp"
                    android:layout_marginStart="18dp"
                    android:textColor="@android:color/white"
                    android:text="Min"
                    />

                <TextView
                    android:id="@+id/currentTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="5dp"
                    android:text="18"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:id="@+id/currentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/currentTemp"
                    android:layout_centerHorizontal="true"
                    android:text="Current"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:id="@+id/maxTemp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="20"
                    android:layout_marginRight="19dp"
                    android:textColor="@android:color/white"
                     />
                <TextView
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/maxTemp"
                    android:layout_alignParentEnd="true"
                    android:text="Max"
                    android:layout_marginRight="14dp"
                    android:textColor="@android:color/white"

                    />

        <View
            android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
            android:layout_below="@+id/max"
        android:layout_height="1dp"
            android:id="@+id/newline"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
      />

        <ListView
            android:listSelector="@android:color/transparent"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_below="@+id/newline"
            android:id="@+id/forcastList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ListView>

            </RelativeLayout>


</RelativeLayout>